{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "jsxImportSource": "@emotion/react",
    "incremental": true,
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types/"
    ],
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@screens/*": [
        "src/screens/*"
      ],
      "@styles/*": [
        "src/styles/*"
      ],
      "@styles": [
        "src/styles"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@recoil/*": [
        "src/recoil/*"
      ],
      "@components": [
        "src/components"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@tests/*": [
        "tests/*"
      ],
      "@icons": [
        "src/components/icons"
      ],
      "@icons/*": [
        "src/components/icons/*"
      ],
      "@hooks": [
        "src/hooks"
      ],
      "@public/*": [
        "public/*"
      ],
      "@api/*": [
        "src/api/*"
      ],
      "@models": [
        "src/models"
      ],
      "@graphql/*": [
        "graphql/*"
      ],
      "@contexts": [
        "src/contexts"
      ]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx",  "tests/utils/mock_i18n.js",
    "tests/utils/mock_apollo_provider.tss", "environment.d.ts"],
  "exclude": ["node_modules"]
}
