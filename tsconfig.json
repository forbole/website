{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "jsxImportSource": "@emotion/react",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "@api/*": ["src/api/*"],
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@contexts": ["src/contexts"],
      "@graphql/*": ["graphql/*"],
      "@hooks": ["src/hooks"],
      "@icons": ["src/components/icons"],
      "@icons/*": ["src/components/icons/*"],
      "@models": ["src/models"],
      "@public/*": ["public/*"],
      "@recoil/*": ["src/recoil/*"],
      "@screens/*": ["src/screens/*"],
      "@src/*": ["src/*"],
      "@styles": ["src/styles"],
      "@styles/*": ["src/styles/*"],
      "@tests/*": ["tests/*"],
      "@utils/*": ["src/utils/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es5",
    "typeRoots": ["./node_modules/@types", "./src/types/"]
  },
  "exclude": ["node_modules"],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "tests/utils/mock_i18n.js",
    "tests/utils/mock_apollo_provider.tss",
    "environment.d.ts"
  ]
}
